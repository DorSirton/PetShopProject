@model PetShopProject.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link rel="stylesheet" href="~/css/LoginStyle.css" />
<body>
    <div class="login-box">
        <img src="~/Photos/LoginIconPhoto.png" class="login-icon-img" />
        <h1>Loggin Now</h1>
        <form method="post" asp-action="Login">
            <div>
                <p> User - Name : </p>
                <input type="text" placeholder="Enter User Name" asp-for="Username" />
            </div>
            <div>
                <p>Password : </p>
                <input asp-for="Password" type="password" placeholder="Enter Password" />
            </div>
            <input type="submit" value="Login" />
            <div>
                <a id="a-style-css" asp-action="FirstPage" asp-controller="Home">Not an Admin ? Click To Enter as A Guest </a>
            </div>
        </form>
    </div>
</body>
